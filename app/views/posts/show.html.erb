<h1 class="mb-3 fw-light"><%= @post.title %></h1>

<p class="text-muted mb-5 fs-6">
  <%= @post.user.first_name.presence || @post.user.email %>
  <span class="mx-2">·</span>
  <%= time_ago_in_words(@post.created_at) %> ago
</p>

<div class="card border-0 shadow-sm mb-5">
  <div class="card-body p-4 p-md-5" style="line-height: 1.8; font-size: 1.1rem;">
    <%= simple_format @post.content, {}, wrapper_tag: "div" %>
  </div>
</div>

<div class="d-flex gap-3 flex-wrap">
  <%= link_to "← Back to Posts", posts_path, class: "btn btn-outline-secondary px-4" %>
  
  <% if user_signed_in?  %>
    <%= link_to "Edit", edit_post_path(@post), class: "btn btn-primary px-4" %>
    <%= button_to "Delete", @post, method: :delete,
                  data: { confirm: "Are you sure you want to delete this post?" },
                  class: "btn btn-outline-danger px-4" %>
  <% end %>
</div>