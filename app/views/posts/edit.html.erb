<h1 class="mb-4 fw-light">Edit Blog Post</h1>

<%= form_with model: @post, local: true, class: "mt-3" do |f| %>
  <div class="mb-4">
    <%= f.label :title, class: "form-label fw-medium" %>
    <%= f.text_field :title, class: "form-control form-control-lg", placeholder: "Enter post title..." %>
  </div>

  <div class="mb-4">
    <%= f.label :content, class: "form-label fw-medium" %>
    <%= f.text_area :content, class: "form-control", rows: 10, placeholder: "Write your content here..." %>
  </div>

  <div class="d-flex gap-3 flex-wrap">
    <button type="submit" name="commit" value="Save as Draft" class="btn btn-outline-secondary btn-lg px-5">
      Save as Draft
    </button>

    <button type="submit" name="commit" value="Publish" class="btn btn-primary btn-lg px-5">
      Publish
    </button>

    <%= link_to "Cancel", @post, class: "btn btn-outline-secondary btn-lg px-5" %>
  </div>
<% end %>