<!-- app/views/posts/_post.html.erb -->
<div class="col-md-6 col-lg-4 mb-4">
  <div class="card h-100 shadow border-0 rounded-lg overflow-hidden transition-shadow hover-shadow-lg">
    <div class="card-body d-flex flex-column">
      <h5 class="card-title fw-semibold mb-3">
        <%= link_to post.title, post, class: "text-dark text-decoration-none" %>
      </h5>
      <p class="card-text text-muted flex-grow-1" style="line-height: 1.6;">
        <%= post.content.truncate(140, separator: ' ') %>
      </p>
      <p class="card-text mt-auto">
        <small class="text-secondary">
          <%= post.user.first_name.presence || post.user.email %>
          · <%= time_ago_in_words(post.created_at) %> ago
        </small>
      </p>
    </div>
    <div class="card-footer bg-transparent border-0 pt-0 pb-4 px-4">
      <%= link_to "Read more →", post, class: "btn btn-outline-primary btn-sm rounded-pill px-4" %>
    </div>
  </div>
</div>
  
</div>