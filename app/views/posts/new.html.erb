<h1 class="mb-4 fw-light">Create New Blog Post</h1>

<%= form_with model: @post, local: true, class: "mt-3" do |f| %>
  <div class="mb-4">
    <%= f.label :title, "Post Title", class: "form-label fw-medium" %>
    <%= f.text_field :title, class: "form-control form-control-lg", placeholder: "Enter a catchy title...", required: true %>
  </div>

  <div class="mb-4">
    <%= f.label :content, "Content", class: "form-label fw-medium" %>
    <%= f.text_area :content, class: "form-control", rows: 12, placeholder: "Write your blog post here...", required: true %>
  </div>

  <div class="d-flex gap-3 flex-wrap">
    <%= f.submit "Publish Post", class: "btn btn-primary btn-lg px-5" %>
    <%= link_to "Cancel", posts_path, class: "btn btn-outline-secondary btn-lg px-5" %>
  </div>
<% end %>