<h1>Create New Blog Post</h1>

<%= form_with model: @post, local: true, class: "mt-4" do |f| %>
  <div class="mb-3">
    <%= f.label :title, "Post Title", class: "form-label" %>
    <%= f.text_field :title, class: "form-control", placeholder: "Enter a catchy title...", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :content, "Content", class: "form-label" %>
    <%= f.text_area :content, class: "form-control", rows: 10, placeholder: "Write your blog post here...", required: true %>
  </div>

  <div class="d-grid gap-2 d-md-block">
    <%= f.submit "Publish Post", class: "btn btn-primary btn-lg" %>
    <%= link_to "Cancel", posts_path, class: "btn btn-outline-secondary btn-lg" %>
  </div>
<% end %>